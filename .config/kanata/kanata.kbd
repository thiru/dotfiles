(defcfg process-unmapped-keys yes)

(defsrc
  4 0
  tab w u
  caps d h j k l
  b)

(defalias
  ;; CAPSLOCK as ESC and CTRL
  caps (tap-hold-press 100 100 esc ctl)
  ;; Vi Mode
  tab (tap-hold-press 300 300 tab (layer-while-held vi)))

(deflayer base 4   0    @tab w       u    @caps d    h    j    k  l     b)
(deflayer vi   end home _    C-right pgup _     pgdn left down up right C-left)

